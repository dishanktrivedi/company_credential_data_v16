<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="company_credential_data_tree_view" model="ir.ui.view">
            <field name="name">company.credentials.data.tree</field>
            <field name="model">company.credentials.data</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree  editable="bottom">
                    <field name="name" required="1"/>
                    <field name="url"  required="1" widget="url"/>
                    <field name="username"  required="1"/>
                    <field name="password"  required="1"/>
                    <field name="description"  required="1"/>
                </tree>
            </field>
    </record>

    <record id="company_credential_data_form_view" model="ir.ui.view">
            <field name="name">company.credentials.data.form</field>
            <field name="model">company.credentials.data</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="url"/>
                                <field name="username"/>
                                <field name="password"/>
                                <field name="company_id"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>
</odoo>

